@model Webbutveckling_Backend_AlexanderForsberg.Models.CityCountryViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Cities i lived in</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Cities" asp-action="Index" method="get">
    <p>
          <select asp-for="CityCountry" asp-items="Model.Country">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].MovedTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities[0].MovedFrom)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovedTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovedFrom)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
